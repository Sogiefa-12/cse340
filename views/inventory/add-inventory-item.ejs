<h1>Add Inventory Item</h1>
    <form action="/add-inventory-item" method="POST">
      <div>
        <label for="inv_classification_id">Classification</label>
        <select name="inv_classification_id">
        <option value="Custom">Custom</option>
        <option value="Sedan">Sedan</option>
        <option value="Sport">Sport</option>
        <option value="SUV">SUV</option>
        <option value="Truck">Truck</option>
        <!-- EJS FOR LOOP -->
        </select>
        <!-- EJS IF END -->
        <% if (typeof errors !== 'undefined' && errors.inv_classification_id) { %>
            <div>
                <% for (const error of errors.inv_classification_id) { %>
                <div class="error">
                <%- error %>
                </div>
                <% } %>
                </div>
            <% } %>
            </div>
            <div>

                <label for="inv_make">Make</label>
                <input type="text" name="inv_make" value="<%= typeof errors !== 'undefined' && errors.inv_make %>" placeholder="Make" required />
            </div>
            <div>
                <label for="inv_model">Model</label>
                <input type="text" name="inv_model" value="<%= typeof errors !== 'undefined' && errors.inv_model %>" placeholder="Model" required />
            </div>
            <div>
                <label for="inv_year">Year</label>
                <input type="number" name="inv_year" value="<%= typeof errors !== 'undefined' && errors.inv_year %>" placeholder="Year" required />
            </div>
        
            <div>
                <label for="inv_price">Price</label>
                <input type="number" name="inv_price" value="<%= typeof errors !== 'undefined' && errors.inv_price %>" placeholder="Price" required />
            </div>
            <div>
                <label for="inv_color">Primary Color</label>
                <input type="text" name="inv_color" value="<%= typeof errors !== 'undefined' && errors.inv_color %>" placeholder="Primary Color" required />
            </div>
            <div>
                <label for="inv_image">Image</label>
                <input type="text" name="inv_image" value="<%= typeof errors !== 'undefined' && errors.inv_image %>" placeholder="Primary Color" required />
            </div>
           
            <div>
                <label for="inv_description">Description</label>
                <textarea name="inv_description" rows="3"><%= typeof errors !== 'undefined' && errors.inv_description %></textarea>
            </div>
            <div>
                <label for="inv_miles">Mileage</label>
                <input type="number" name="inv_miles" value="<%= typeof errors !== 'undefined' && errors.inv_miles %>" placeholder="Mileage" required />
            </div>
            <div>
              
                <button type="submit">Add Inventory Item</button>
            </div>
</form>

    